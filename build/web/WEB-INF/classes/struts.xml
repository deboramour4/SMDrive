<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
  "-// Apache Software Foundation//DTD Struts Configuration 2.0//EN"
  "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <package name="default" extends="struts-default">

        <action name="files" class="actions.FileExplorerAction">
            <result name="sucess">explorer.jsp</result>
        </action>
        
        <action name="logout" class="actions.LogoutAction">
            <result name="sucess">index.jsp</result>
        </action>
        
        <action name="register" class="actions.SignUpAction">
           <result name="sucess" type="chain">files</result>
        </action>
        
       <action name="login" class="actions.LoginAction">
            <result name="sucess" type="chain">files</result>
            <result name="error">404.jsp</result>
        </action>
        
        <action name="download" class="actions.DownloadAction">
            <result name="success" type="stream">
                <param name="contentType">application/octet-stream</param>
                <param name="inputName">inputStream</param>
                <param name="contentDisposition">attachment;filename="${fileName}"</param>
            </result>
            <result name="error">/index.jsp</result>
        </action>

    </package>
</struts>
